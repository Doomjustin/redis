{
    "clangd.checkUpdates": true,
    "clangd.arguments": [
        "--compile-commands-dir=build",
    ],
    // 指定使用 LLDB 作为默认调试器
    "cmake.debugConfig": {
        "type": "lldb",
        "program": "${command:cmake.launchTargetPath}",
        "args": [],
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb"
    },
    // CMake Tools 相关设置
    "cmake.defaultVariants": {
        "buildType": {
            "default": "debug",
            "description": "The build type to use"
        }
    },
    "cmake.configureArgs": [
        "-DCMAKE_TOOLCHAIN_FILE=$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    ],
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "cSpell.words": [
        "cassert",
        "cerrno",
        "charconv",
        "chrono",
        "cinttypes",
        "climits",
        "clocale",
        "cmath",
        "codecvt",
        "commctrl",
        "commdlg",
        "csetjmp",
        "csignal",
        "cstdalign",
        "cstdarg",
        "cstdbool",
        "cstddef",
        "cstdint",
        "cstdio",
        "cstdlib",
        "cstring",
        "ctgmath",
        "ctype",
        "cwchar",
        "cwctype",
        "deque",
        "dlfcn",
        "eigen",
        "errno",
        "fcntl",
        "fenv",
        "fnmatch",
        "fstream",
        "ifaddrs",
        "inttypes",
        "iomanip",
        "iosfwd",
        "mqueue",
        "netdb",
        "netinet",
        "pthread",
        "richedit",
        "setjmp",
        "shellapi",
        "shlobj",
        "sstream",
        "stdalign",
        "stdarg",
        "stdatomic",
        "stdbool",
        "stddef",
        "stdexcept",
        "stdint",
        "stdlib",
        "stdnoreturn",
        "Stroustrup",
        "strstream",
        "syncstream",
        "tcpip",
        "termios",
        "tgmath",
        "typeindex",
        "typeinfo",
        "uchar",
        "unistd",
        "utime",
        "utmp",
        "valarray",
        "wchar",
        "wctype",
        "winbase",
        "wincon",
        "wincrypt",
        "windef",
        "wingdi",
        "winreg",
        "winsock",
        "winuser",
        "wordexp"
    ],
}